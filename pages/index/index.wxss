/**index.wxss**/
.container{
	padding-bottom: 100rpx;
}
.banner{
	width: 100%;
	height: 390rpx;
}
.slide-image{
	width: 100%;
	height: 100%;
}
.index-tab{
	width: 100%;
	background: #ffffff;
	padding: 30rpx 0rpx;
	display: flex;
	justify-content: center;
	text-align: center;
}
.tab-option{
	flex:1;
	font-size: 30rpx;
}
.tab-option image{
	width: 90rpx;
	height: 90rpx;
}
.banner-option{
	width: 100%;
}
.banner-option image{
	width: 100%;
}
.mr10{
	margin-top: 20rpx;
}
.mr5{
	margin-top: 5rpx;
}
.banner-conent{
	display: flex;
	justify-content: space-between;
}
.banner-conent image{
	width: 50%;
	box-sizing: border-box;
}
.recommend-title{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	background: #ffffff;
	text-align: center;
	color: #ff3900;
	font-size: 36rpx;
	margin-top: 30rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.line{
	display: inline-block;
	width: 200rpx;
	height: 5rpx;
	background: #ff3900;
}
.line-left{
	margin-right: 20rpx;
}
.line-right{
	margin-left: 20rpx;
}
.recommend{
	padding:20rpx;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	padding-top: 0px;
}
.recommend-option{
    width: 49%;
    background: #ffffff;
    margin-top: 20rpx;
}
.recommend-option image{
	width: 100%;
	height: 360rpx;
}
.option-text{
	padding:10rpx 10rpx 30rpx 10rpx;
}
.price{
	font-size: 36rpx;
	color: #ff3900;
}
.number{
	font-size: 30rpx;
	color: #b5b5b5;
}
.option-line{
	width: 95%;
    margin:20rpx auto;
    margin-bottom: 0px;
    height: 6rpx;
    background: #ff3900;
}