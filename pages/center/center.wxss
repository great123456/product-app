/* pages/center/center.wxss */
.container{
	padding-bottom: 100rpx;
}
.center-header{
	width: 100%;
	height: 200rpx;
	background: #fe3a00;
	color: #ffffff;
	padding:50rpx;
	box-sizing: border-box;
	position: relative;
}
.center-message{
	position: absolute;
	right: 30rpx;
	top: 20rpx;
}
.center-message image{
	width: 40rpx;
}
.user-avatar{
	width: 100rpx;
	height: 100rpx;
	border-radius: 100rpx;
	display: inline-block;
}
.user-info{
	display: inline-block;
	margin-left: 30rpx;
}
.user-info text{
	display: block;
	font-size: 22rpx;
	text-align: center;
	border:1px solid #ffffff;
	margin-top: 10rpx;
	border-radius: 20rpx;
	padding:5rpx 20rpx;
}
.center-container{
	width: 100%;
	padding:30rpx 20rpx;
	box-sizing: border-box;
}
.center-order{
	background: #ffffff;
	border-radius: 10rpx;
	padding:20rpx;
	box-sizing: border-box;
}
.order-title{
	font-size: 33rpx;
}
.check-all{
	font-size: #999999;
	margin-right: 10rpx;
}
.center-tab{
	width: 100%;
	background: #ffffff;
	padding: 20rpx 0rpx;
	padding-top: 10rpx;
	display: flex;
	justify-content: center;
	text-align: center;
	box-sizing: border-box;
	margin-top: 20rpx;
}
.center-tab-container{
	width: 100%;
	background: #ffffff;
	padding: 10rpx 0rpx;
	display: flex;
	justify-content: center;
	text-align: center;
	box-sizing: border-box;
	flex-wrap: wrap;
	padding-top: 0px;
}
.center-option{
	flex:1;
	font-size: 28rpx;
	color: #999999;
}
.center-option image{
	width: 50rpx;
	height: 50rpx;
	margin-bottom: 10rpx;
}
.tab-option{
	width: 25%;
	font-size: 28rpx;
	color: #999999;
	margin-top: 30rpx;
}
.tab-option image{
	width: 60rpx;
	height: 60rpx;
	margin-bottom: 10rpx;
}
.contact{
	position: relative;
}
.contact-btn{
	position: absolute;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	opacity: 0;
}
.recommend-title{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	background: #ffffff;
	text-align: center;
	color: #ff3900;
	font-size: 36rpx;
	margin-top: 30rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.line{
	display: inline-block;
	width: 200rpx;
	height: 5rpx;
	background: #ff3900;
}
.line-left{
	margin-right: 20rpx;
}
.line-right{
	margin-left: 20rpx;
}
.recommend{
	padding:20rpx;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	padding-top: 0px;
}
.recommend-option{
    width: 49%;
    background: #ffffff;
    margin-top: 20rpx;
}
.recommend-option image{
	width: 100%;
	height: 360rpx;
}
.option-text{
	padding:10rpx 10rpx 30rpx 10rpx;
}
.price{
	font-size: 36rpx;
	color: #ff3900;
}
.number{
	font-size: 30rpx;
	color: #b5b5b5;
}
.option-line{
	width: 95%;
    margin:20rpx auto;
    margin-bottom: 0px;
    height: 6rpx;
    background: #ff3900;
}