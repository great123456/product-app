/* pages/account/account.wxss */
.container{
	padding-top: 30rpx;
}
.account-content{
	margin-bottom: 30rpx;
}
.account-btn{
	width: 100%;
	height: 39px;
	line-height: 39px;
	background: #fe3a00;
	color: #ffffff;
	text-align: center;
	font-size: 32rpx;
	position: fixed;
	left: 0px;
	bottom: 0px;
}
.account-item{
	line-height: 39px;
	font-size: 32rpx;
	border-bottom: 1px solid #f5f5f5;
	padding:0rpx 30rpx;
	background: #ffffff;
}
.message-icon{
	float: right;
	width: 16rpx;
	margin-top: 26rpx;
}
.account-text{
	float: right;
	margin-right: 20rpx;
}
.user-avatar{
	float: right;
	width: 100rpx;
	height: 100rpx;
	border-radius: 100%;
	margin-right: 20rpx;
}