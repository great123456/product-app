<!--pages/account/account.wxml-->
<view class="container">
	<view class="account-content">
		<view class="account-item" style="height: 130rpx;padding-top: 10rpx;" bindtap="selectImage">
			<text>头像</text>
			<image class="message-icon" src="/static/image/icon_xiabu.png" mode="widthFix"></image>
			<image src="/static/image/icon_touxiang.png" class="user-avatar"></image>
		</view>
		<view class="account-item">
			<text>昵称</text>
			<image class="message-icon" src="/static/image/icon_xiabu.png" mode="widthFix"></image>
			<text class="account-text">小A</text>
		</view>
	</view>

	<view class="account-content">
		<view class="account-item">
			<text>个人信息</text>
			<image class="message-icon" src="/static/image/icon_xiabu.png" mode="widthFix"></image>
		</view>
		<view class="account-item">
			<text>账号与密码</text>
			<image class="message-icon" src="/static/image/icon_xiabu.png" mode="widthFix"></image>
		</view>
		<view class="account-item" bindtap="addressPage">
			<text>收货地址</text>
			<image class="message-icon" src="/static/image/icon_xiabu.png" mode="widthFix"></image>
			<text class="account-text">未设置</text>
		</view>
	</view>
	<view class="account-btn">退出登录</view>
</view>
