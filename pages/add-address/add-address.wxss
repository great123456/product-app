/* pages/add-address/add-address.wxss */
.container{
	padding-top: 20rpx;
}
.address-container{
	background: #ffffff;
	padding: 0rpx 20rpx;
}
.address-item{
	height: 100rpx;
	line-height: 100rpx;
	font-size: 32rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.icon-arrow{
	width: 16rpx;
	margin-left: 10rpx;
	position: relative;
	top: 5rpx;
}
.address-title{
	display: inline-block;
	width: 160rpx;
}
.address-put{
	display: inline-block;
	height: 100rpx;
	line-height: 100rpx;
	flex: 1;
}
.address-btn{
	margin-top: 50rpx;
	padding:0rpx 20rpx;
}
.address-btn text{
	display: inline-block;
	width: 100%;
	height: 39px;
	line-height: 39px;
	color: #ffffff;
	text-align: center;
	font-size: 32rpx;
	background: #ff3900;
	border-radius: 5px;
}