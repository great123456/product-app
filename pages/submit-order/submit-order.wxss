/* pages/submit-order/submit-order.wxss */
.container{
	padding-bottom: 160rpx;
}
.order-header{
	background: #ffffff;
	padding: 20rpx 50rpx;
	font-size: 30rpx;
	line-height: 50rpx;
}
.heaer-bottom{
	padding: 0px;
	bottom: 0px;
	width: 100%;
	position: relative;
	top:-22rpx;
}
.icon-arrow{
	width: 16rpx;
}
.site{
	position: relative;
}
.site image{
	width: 26rpx;
	position: absolute;
	top: 10rpx;
	left: -36rpx;
}
.address-message{
	color: #333333;
}
.address-message text{
	color: #333333;
	font-weight: bold;
}
.order-bottom{
	position: fixed;
	left: 0px;
	bottom: 0px;
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: space-between;
	text-align: center;
	align-items: center;
	font-size: 32rpx;
}
.bottom-left{
	width: 60%;
	background: #ffffff;
	height: 100%;
	line-height: 100rpx;
}
.bottom-right{
	width: 40%;
	background: #ff3900;
	color: #ffffff;
	height: 100%;
	line-height: 100rpx;
}
.bottom-price{
	color: #ff3900;
}
.order-item{
	margin-top: 20rpx;
	background: #ffffff;
	padding: 0rpx 30rpx;
	line-height: 80rpx;
}
.order-title{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 32rpx;
}
.order-product{
	background: #eeeeee;
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.product-img{
	display: inline-block;
	height: 100rpx;
}
.product-img image{
   display: inline-block;
   margin-right: 10rpx;
   width: 100rpx;
   height: 100rpx;
}
.order-textarea{
	background: #eeeeee;
	padding:20rpx;
	border-radius: 20rpx;
	box-sizing: border-box;
}
.icon-weixin{
	width: 36rpx;
	position: relative;
	top: 20rpx;
}
.price{
	color: #fe3a00;
}