/* pages/add-product/add-product.wxss */
.container{
	padding-top: 20rpx;
}
.product-container{
	padding:0rpx 20rpx;
	background: #ffffff;
}
.product-btn{
	width: 100%;
	height: 39px;
	line-height: 39px;
	background: #fe3a00;
	color: #ffffff;
	text-align: center;
	font-size: 32rpx;
	position: fixed;
	left: 0px;
	bottom: 0px;
}
.product-item{
	display: flex;
	justify-content: flex-start;
	padding:30rpx 0rpx;
	border-bottom: 1px solid #f5f5f5;
}
.product-img{
	width: 130rpx;
	height: 130rpx;
	margin-right: 20rpx;
}
.product-bottom{
	display: flex;
	justify-content: space-between;
	margin-top: 50rpx;
}
.price{
	color: #fe3a00;
}
.product-right{
	width: 160rpx;
	height: 23px;
	line-height: 20px;
	border-radius: 30rpx;
	border:1px solid #b5b6b7;
}
.product-right text{
	display: inline-block;
}
.reduce{
	width: 50rpx;
	text-align: center;
	color: #fe3a00;
	font-size: 22px;
	border-right:1px solid #b5b6b7;
	box-sizing: border-box;
}
.product-num{
	width: 60rpx;
	text-align: center;
	font-size: 32rpx;
}
.add{
	width: 50rpx;
	text-align: center;
	color: #fe3a00;
	font-size: 20px;
	border-left:1px solid #b5b6b7;
	box-sizing: border-box;
}