/* pages/shop/shop.wxss */
.shop-hint{
	background: #ffffff;
	text-align: center;
	color: #ff3900;
	font-size: 26rpx;
	padding: 20rpx 0rpx;
}
.shop-hint image{
	width: 23rpx;
	margin-right: 10rpx;
}
.shop-bottom{
	width: 100%;
	height: 100rpx;
	position: fixed;
	left: 0px;
	bottom: 0px;
	background: #ffffff;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.bottom-btn{
	width: 160rpx;
	height: 100%;
	line-height: 100rpx;
	font-size: 32rpx;
	text-align: center;
	display: inline-block;
	background: #ff3900;
	color: #ffffff;
}
.bottom-num{
	font-size: 32rpx;
	color: #ff3900;
	margin-right: 10rpx;
	margin-left: 20rpx;
}
.bottom-left{
	padding-left: 30rpx;
}
.manage{
	margin:20rpx auto;
	background: #ffffff;
	height: 100rpx;
	line-height: 100rpx;
	padding: 0rpx 30rpx;
	display: flex;
	justify-content: space-between;
    font-size: 32rpx;
}
.option{
	margin-bottom: 20rpx;
	background: #ffffff;
}
.option-title{
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	border-bottom: 1px solid #b5b6b7;
	font-size: 32rpx;
}
.option-title image{
	width: 33rpx;
	margin-right: 10rpx;
	position: relative;
	top: 6rpx;
}
.option-time{
	display: inline-block;
	width: 50rpx;
	height: 50rpx;
	color: #ffffff;
	background: #333333;
	margin-left: 10rpx;
	font-size: 26rpx;
	line-height: 50rpx;
	border-radius: 10rpx;
}
.option-content{
	padding:20rpx 30rpx 0rpx 100rpx;
}
.price{
	font-size: 32rpx;
	color: #ff3900;
	margin-top: 10rpx;
}
.option-checked{
	position: absolute;
	left: -60rpx;
	top: 50%;
	transform: translateY(-50%);
}
.product-img{
	width: 160rpx;
	height: 160rpx;
	margin-right: 30rpx;
}
.option-right{
	flex:1;
	position: relative;
}
.option-right-content{
	background: #eeeeee;
	padding:20rpx;
	border-radius: 5rpx;
	margin-top: 10rpx;
	font-size: 26rpx;
}
.option-bottom{
	height: 35px;
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
}
.edit-btn{
	width: 60px;
	height: 50rpx;
	font-size: 32rpx;
	border:1px solid #b5b6b7;
	border-radius: 10rpx;
	text-align: center;
	line-height: 50rpx;
}