/* pages/message/message.wxss */
.container{
	padding-top: 20rpx;
}
.message-container{
	background: #ffffff;
}
.message-title{
	font-size: 36rpx;
	line-height: 100rpx;
	padding:0rpx 30rpx;
}
.message-item{
	font-size: 32rpx;
	padding: 0rpx 30rpx;
	border-top: 1px solid #f5f5f5;
}
.message-text{
   line-height: 100rpx;
   min-width: 500rpx;
   display: inline-block;
}
.line{
	display: inline-block;
	width: 10rpx;
	height: 10rpx;
	background: #cccccc;
	border-radius: 100%;
	margin-right: 10rpx;
}
.message-icon{
	float: right;
	width: 18rpx;
	margin-top: 32rpx;
}
.message-remark{
	padding-bottom: 50rpx;
}