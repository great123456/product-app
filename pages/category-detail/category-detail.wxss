/* pages/category-detail/category-detail.wxss */
.container{
	padding-bottom: 100rpx;
}
.category-header{
	height: 39px;
	line-height: 39px;
	color: #ffffff;
	background: #fe3a00;
	display: flex;
	justify-content: center;
	align-items: center;
	text-align: center;
}
.category-header view{
	display: inline-block;
	flex: 1;
}
.category-header image{
	width: 20rpx;
	height: 30rpx;
	margin-left: 10rpx;
	position: relative;
	top: 6rpx;
}
.recommend{
	padding:20rpx;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	padding-top: 0px;
}
.recommend-option{
    width: 49%;
    background: #ffffff;
    margin-top: 20rpx;
}
.recommend-option image{
	width: 100%;
	height: 360rpx;
}
.option-text{
	padding:10rpx 10rpx 30rpx 10rpx;
}
.price{
	font-size: 36rpx;
	color: #ff3900;
}
.number{
	font-size: 30rpx;
	color: #b5b5b5;
}
.option-line{
	width: 95%;
    margin:20rpx auto;
    margin-bottom: 0px;
    height: 6rpx;
    background: #ff3900;
}